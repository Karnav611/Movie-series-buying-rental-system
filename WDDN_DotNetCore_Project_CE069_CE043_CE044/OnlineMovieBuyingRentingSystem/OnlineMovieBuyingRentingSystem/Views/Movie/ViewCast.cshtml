@model IEnumerable<OnlineMovieBuyingRentingSystem.Models.Cast>

@{
    ViewData["Title"] = "ViewCast";
}

<h1>Cast for @ViewBag.MovieTitle</h1>


<a href="/Admin">Admin</a>
<br />

<a href="/Movie">Manage Movies</a>
<br />

<a asp-action="CastCreate">Add Cast</a>
@*@Html.DisplayFor(model => model)*@

<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Movie)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Movie.Title)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CharacterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actor.Name)
                </td>
                <td>
                    <a asp-action="CastEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="CastDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="CastDelete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
