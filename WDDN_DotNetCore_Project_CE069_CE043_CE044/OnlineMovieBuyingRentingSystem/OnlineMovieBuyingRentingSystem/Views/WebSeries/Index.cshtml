@model IEnumerable<OnlineMovieBuyingRentingSystem.Models.WebSeries>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="/Admin">Admin</a>
</p>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMDBRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrailerLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebSeriesFilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMDBRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poster)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebSeriesFilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="ViewWebSeriesCast" asp-route-id="@item.Id">View Cast</a> |
                <a asp-action="ViewWebSeriesImages" asp-route-id="@item.Id">View Images</a>
            </td>
        </tr>
}
    </tbody>
</table>
